{
    "name": "rebelcode/module-loader",
    "description": "A module loader",
    "type": "library",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "RebelCode",
            "email": "dev@rebelcode.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^5.3 | ^7.0",
        "rebelcode/module-interface": "dev-task/initial-interfaces",
        "rebelcode/module-iterator-abstract": "dev-task/initial-classes",
        "dhii/modular-interface": "dev-task/initial-interface",
        "dhii/loop-machine": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "ptrofimov/xpmock": "^1.1",
        "dhii/php-cs-fixer-config": "dev-php-5.3",
        "codeclimate/php-test-reporter": "<=0.3.2"
    },
    "autoload": {
        "psr-4": {
            "RebelCode\\Modular\\": "src"
        }
    },
    "scripts": {
        "test": "phpunit",
        "csfix": "php-cs-fixer fix -vvv"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/Dhii/machine-loop-machine"
        },
        {
            "type": "vcs",
            "url": "https://github.com/RebelCodecom/module-iterator-abstract"
        },
        {
            "type": "vcs",
            "url": "https://github.com/RebelCodecom/module-interface"
        }
    ]
}
